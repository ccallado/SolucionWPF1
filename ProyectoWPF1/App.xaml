<Application x:Class="ProyectoWPF1.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             StartupUri="VentanaInicio.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Varios/DiccionarioRecursos.xaml" />
                <!--<ResourceDictionary Source="Varios/DiccionarioRecursos.xaml" />-->
            </ResourceDictionary.MergedDictionaries>
            <LinearGradientBrush x:Key="BrochaAppCyan"
            StartPoint="0,0" EndPoint="0,1">
                <GradientStop Offset="0" Color="LightCyan" />
                <GradientStop Offset="0.45" Color="LightCyan" />
                <GradientStop Offset="0.5" Color="Cyan" />
            </LinearGradientBrush>
            <Style TargetType="Button">
                <Setter Property="Button.Foreground" Value="Green"  />
                <Setter Property="Button.Width" Value="150" />
                <Setter Property="Background" Value="Orange" />
                <!--<EventSetter Event="Button.Click" Handler="btnEstilos_Click" />-->
            </Style>
        </ResourceDictionary>
    </Application.Resources>
</Application>
